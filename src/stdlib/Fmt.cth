intrinsic {
  fn cast_int_to_string(Int) -> Str;
  fn cast_float_to_string(Float) -> Str;
}

pub fn str(s: Str) -> Str {
  s
}

pub fn int(i: Int) -> Str {
  cast_int_to_string(i)
}

pub fn float(f: Float) -> Str {
  cast_float_to_string(f)
}

pub fn bool(b: Bool) -> Str {
  match b {
    true => "true",
    false => "false",
    _ => "???",
  }
}
