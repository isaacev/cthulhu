use ::Io;

type Result('a, 'b) =
  | Left('a)
  | Right('b);

fn attempt(success: Bool, val: 'a) -> Result('a, Str) {
  if success {
    Result::Left(val)
  } else {
    Result::Right("unable to generate a true value")
  }
}

#[entry]
fn main() -> () {
  match attempt(true, true) {
    Result::Left(true) => Io::println("was true"),
    Result::Right(msg) => Io::println(msg),
  };
}
